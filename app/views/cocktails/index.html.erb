<h1>Liste de tous mes cocktails</h1>

<div class="row">
  <div class="container">
    <% @cocktails.each do |cocktail| %>
      <div class="col-lg-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo %>');">
        <div class="card-category"><%= link_to cocktail.name, cocktail_path(cocktail) %></div>
      </div>
      </div>
    <% end %>
  </div>
</div>



