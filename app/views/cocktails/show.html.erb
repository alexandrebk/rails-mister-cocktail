<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  </li>
  <% end %>
</ul>
<p>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</p>
<button>
  <%= link_to "Edit Cocktail", edit_cocktail_path(@cocktail) %>
</button>
<button>
  <%= link_to "Create dose", new_cocktail_dose_path(@cocktail) %>
</button>
